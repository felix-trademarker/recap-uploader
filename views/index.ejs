              <tr>
                <td><%= recaps[i].lessonNumber %></td>
                <td><%= moment(recaps[i]._id.getTimestamp()).format('M/D/YYYY H:m:ss') %></td>
                <td><%= moment(recaps[i].updatedAt).format('M/D/YYYY H:m:ss') %></td>

                <td>
                  <a href="/recap-uploader/edit/<%= recaps[i]._id %>">Edit</a>
                </td>
              </tr>
              <% } %>

            </table>
            <% } %>
          </div>
        </div>


      </section>

    </div>
  </div>
</div>

